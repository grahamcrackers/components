{
    "extends": "@repo/typescript-config/nextjs.json",
    "compilerOptions": {
        "plugins": [
            {
                "name": "next"
            }
        ],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": [
        "next-env.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx",
        ".next/types/**/*.ts",
        // specific js files
        "next.config.js",
        "src/markdoc/nodes.js",
        "src/markdoc/tags.js",
    ],
    "exclude": ["node_modules"]
}
